<nav class="navbar navbar-inverse">
    <div class="container">

        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Sprint Planer", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            <div class="navbar-right">

                @if (Session["loginSuccess"] == null)
                {
                    using (@Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "navbar-loginform" }))
                    {
                        <div class="form-inline">
                            <form class="form-inline navbar-login">
                                <div class="form-group">
                                    <input name="Email" type="text" class="form-control" id="emailLoginField" placeholder="Twój email" />
                                </div>
                                <div class="form-group">
                                    <input name="Password" type="password" class="form-control" id="passwordLoginField" placeholder="Twoje hasło" />
                                </div>
                                <button type="submit" class="btn btn-primary">Zaloguj</button>
                            </form>

                        </div>
                    }
                }
                @if (Session["loginSuccess"] != null)
                {
                    <div class="nav navbar-nav navbar-loginform">
                        @Html.ActionLink("Wyloguj", "Logout", "User", null, new { @class = "btn btn-primary" })
                    </div>
                }
            </div>
        </div>
    </div>
</nav>